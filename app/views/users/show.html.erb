 <div class="container px-5 px-sm-0">
  <!--エラー表示-->
  <%= render 'layouts/errors', obj: @user %>
  <div class="row">
   <!-- sidebarの呼び出し -->
   <div class="col-md-3">
    <%= render 'layouts/sidebar', user: @user, book: @book  %>
   </div>
   <div class="col-md-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <%= render 'books/index',books: @books %>

    </table>
    <div class = "table_width">
     <table class="table table-bordered" >
      <thead>
       <tr>
        <th>今日の投稿数</th>
        <th>前日の投稿数</th>
        <th>前日比</th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td><%= @today_book.count %></td>
        <td><%= @yesterday_book.count %></td>
        <td>
         <% if @yesterday_book.count == 0 %>
          前日の投稿はありません
         <% else %>
          <% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
          <%= (@the_day_before * 100).round %>
         <% end %>
        </td>
        </tr>
       </tbody>
      </table>
     </div>
     <div class = "table_width">
      <table class="table table-bordered">
       <thead>
        <tr>
         <th>今週の投稿</th>
         <th>先週の投稿</th>
         <th>前週比</th>
        </tr>
       </thead>
       <tbody>
        <tr>
         <td><%= @this_week_book.count %></td>
         <td><%= @last_week_book.count %></td>
         <% if @last_week_book.count == 0 %>
          <td>先週の投稿はなし</td>
         <% else %>
          <td><% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %><!--to_fは少数点までの数値まで表示してくれる-->
          <%= (@the_week_before * 100).round %>%</td><!--@the_week_beforeに１００をかけて％で表示されます。-->
         <% end %>
        </tr>
       </tbody>
      </table>
    </div>
   </div>
  </div>
 </div>
